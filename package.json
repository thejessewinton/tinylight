{
  "name": "tinylight",
  "version": "0.0.0",
  "keywords": ["react", "video", "video player", "tinylight"],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "biome check .",
    "format:fix": "biome check . --write",
    "release": "turbo run build && changeset version && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.27.10",
    "turbo": "^2.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thejessewinton/tinylight-ui.git"
  },
  "bugs": {
    "url": "https://github.com/thejessewinton/tinylight-ui/issues"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22"
  }
}
